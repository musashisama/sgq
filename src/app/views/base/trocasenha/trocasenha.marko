<!DOCTYPE html>
<html>
<app-scripts-css/>
  <body>
    <app-header />
    <main class="conteudoPrincipal">
      <app-navbar id="slide-out" class="sidenav"/>
      <div class="container">
        <div class="row">
          <div class="col s6 offset-s3 center-align">
            <div class="card">
              <br/>
              <h4 class="center-align titulo">Alteração de Senha</h4>
              <div class="card-content">
                <form action=`/form-altera-senha` method="post">
                  <div class="form-group input-field pwd">
                    <if(data.controle)>
                      <input type="hidden" autocomplete="username" id="controle" name="controle" value=data.controle/>
                    </if>
                    <i class="material-icons prefix">lock</i>
                    <input type="password" required autocomplete="new-password" id="pwd" name="pwd" placeholder="Digite sua nova senha." class="form-control"/>
                  </div>
                  <div class="form-group input-field pwd">
                    <i class="material-icons prefix">lock</i>
                    <input type="password" required autocomplete="new-password-confirmation" id="pwdConf" name="pwdConf" placeholder="Confirme sua senha." class="form-control"/>
                  </div>
                  <div class="form-group">
                    <button class="btn-small waves-effect waves-light btn-trocasenha green right" type="submit" name="action">
                      Confirmar<i class="material-icons left">send</i>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <!--Modal Structure-->
    <div id="modal1" class="modal">
      <div class="modal-content">
        <h4 class="hModal">Modal Header</h4>
        <p class="pModal"/>
      </div>
      <div class="modal-footer"/>
    </div>
   <app-footer/>
    <app-scripts-js/>
    <script src="/estatico/js/base/trocasenha.js"/>
  </body>
</html>
