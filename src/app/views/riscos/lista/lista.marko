    <body>
        <header>
        </header>
        <main class="conteudoPrincipal">
            <div class="container">
                <h1 class="center-align">Lista de Não Conformidades</h1>

                <table id="riscos" class="striped highlight centered z-depth-3 responsive-table">
                    <thead class="white-text grey darken-4">
                        <tr>
                            <th>Macroprocesso</th>
                            <th>Não conformidade</th>                            
                            <th>Editar</th>
                            <th>Remover</th>
                        </tr>
                    </thead>
                    <tbody>
                        <for|nc| of=data.nc>
                        <tr id=`risco_${nc._id}`>
                            <td>${nc.Macroprocesso}</td>
                            <td>${nc.nconformidade}</td>                           
                            <td><a href=`/livros/form/${nc._id}`><i class="small material-icons icones center-align">edit</i></a></td>
                            <td><a href="#" data-ref=`${nc._id}` data-type="remocao"><i class="md-dark md-inactive small material-icons icones center-align">remove_circle</i></a></td>
                        </tr>
                    </for>
                    </tbody>
                </table>                 
            </div>
        </main>
        <footer class="rodape">
           
        </footer>

